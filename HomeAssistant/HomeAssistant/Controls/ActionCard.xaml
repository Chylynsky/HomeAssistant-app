<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HomeAssistant.Controls.ActionCard" 
    BackgroundColor="FloralWhite" BorderColor="Transparent" CornerRadius="20" HasShadow="True">

    <Frame.GestureRecognizers>
        <SwipeGestureRecognizer x:Name="swipeGestureRecognizer" Direction="Down"/>
    </Frame.GestureRecognizers>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Label x:Name="titleLabel" Grid.Row="0" Grid.ColumnSpan="2" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" FontSize="20"/>
        <ImageButton x:Name="closeButton" Grid.Row="0" Grid.Column="2" VerticalOptions="Fill" HorizontalOptions="Fill"/>
        <ScrollView x:Name="scrollViewContent" Grid.Row="1" Grid.ColumnSpan="3"/>

    </Grid>
</Frame>