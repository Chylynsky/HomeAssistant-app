<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HomeAssistant.View.DeviceCardSmallView" 
    BackgroundColor="FloralWhite" BorderColor="DarkGray" CornerRadius="20" HasShadow="True">

    <Frame.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding SelectDeviceCommand}" CommandParameter="{Binding Id}" Tapped="tapGestureRecognizer_Tapped"/>
    </Frame.GestureRecognizers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Text="{Binding Name}" TextColor="Black" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand"/>
        <Image Grid.Row="1" Source="{Binding IconSource}"/>
    </Grid>
</Frame>